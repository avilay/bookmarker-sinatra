<h1>Details</h1>
<%= partial(:_flash) %>
<fieldset>
	<legend>Bookmark</legend>
	<div style="margin-bottom: 10px;">
		<label><strong>Url</strong></label>
		<a href="@bookmark.url"><%= @bookmark.url %></a>		
	</div>
	<div style="margin-bottom: 10px;">
		<label><strong>Name</strong></label>
		<%= @bookmark.name %>
	</div>
	<div style="margin-bottom: 10px;">
		<label><strong>Notes</strong></label>
		<%= @bookmark.notes %>            
	</div>
	<div style="margin-bottom: 10px;">
		<label><strong>Added On</strong></label>    
		<%= @bookmark.added_on.strftime("%d %b %Y") %>
	</div>                					
</fieldset>
<p>
	<a href="/bookmarks/<%= @bookmark.id %>/pin/" class="btn btn-inverse">Pin</a>
	<a href="/bookmarks/<%= @bookmark.id %>/edit/" class="btn btn-warning">Edit</a>
	<a href="/bookmarks/<%= @bookmark.id %>/delete/" class="btn btn-danger">Delete</a>	
</p>